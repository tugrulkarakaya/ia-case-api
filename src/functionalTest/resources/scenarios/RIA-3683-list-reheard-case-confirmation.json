{
  "description": "RIA-3683 List reheard case confirmation",
  "launchDarklyKey": "reheard-feature:true",
  "request": {
    "uri": "/asylum/ccdSubmitted",
    "credentials": "AdminOfficer",
    "input": {
      "eventId": "listCase",
      "state": "prepareForHearing",
      "caseData": {
        "template": "minimal-appeal-submitted.json",
        "replacements": {
          "isReheardAppealEnabled": "Yes",
          "caseFlagSetAsideReheardExists": "Yes"
        }
      }
    }
  },
  "expectation": {
    "status": 200,
    "caseData": {
      "template": "minimal-appeal-submitted.json",
      "replacements": {
        "isReheardAppealEnabled": "Yes",
        "caseFlagSetAsideReheardExists": "Yes"
      }
    },
    "confirmation": {
      "header": "# You have listed the case",
      "body": "#### What happens next\n\nThe hearing notice will be sent to all parties.<br>You don't need to do any more on this case."
    }
  }
}
